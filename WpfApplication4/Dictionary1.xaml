<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ControlTemplate x:Key="bt" TargetType="TextBox">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="6*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Background="{TemplateBinding Foreground}"></Label>
            <ContentPresenter Content="{TemplateBinding Text}" Grid.Column="1" VerticalAlignment="Center"></ContentPresenter>
        </Grid>
    </ControlTemplate>
</ResourceDictionary>